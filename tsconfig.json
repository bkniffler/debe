{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "declaration": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noLib": false,
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom"],
    "allowJs": false,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "declarationMap": false,
    "sourceMap": true,
    "importHelpers": true,
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.cache/typescript",
    "downlevelIteration": true,
    "paths": {
      "*": ["types/*"],
      "debe": ["./src/core"],
      "debe-adapter": ["./src/adapter"],
      "debe-idb": ["./src/idb"],
      "debe-memory": ["./src/memory"],
      "debe-sql": ["./src/sql"],
      "debe-better-sqlite3": ["./src/better-sqlite3"],
      "debe-postgresql": ["./src/postgresql"],
      "debe-delta": ["./src/delta"],
      "debe-socket": ["./src/socket"],
      "debe-socket-server": ["./src/socket-server"],
      "debe-sync": ["./src/sync"],
      "debe-sync-server": ["./src/sync-server"],
      "debe-react": ["./src/react"],
      "debe-react-server": ["./src/react-server"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib"]
}
