{
  "name": "sqlight-monorepo",
  "private": true,
  "license": "MIT",
  "keywords": [
    "sqlite",
    "database",
    "electron",
    "react-native",
    "react"
  ],
  "author": "Benjamin Kniffler <bkniffler@me.com>",
  "bugs": {
    "url": "https://github.com/bkniffler/sqlight"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bkniffler/sqlight.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "up": "yarn upgrade-interactive --latest",
    "docs": "docsify serve docs",
    "netlify": "yarn build && cd example/react && yarn && yarn build",
    "bootstrap": "lerna bootstrap",
    "build": "yarn bootstrap && run-p ts:*",
    "dev": "run-p \"ts:* -- --watch\"",
    "ts:es": "tsc --build ./packages/sqlight/tsconfig.es.json",
    "ts:lib": "tsc --build ./packages/sqlight/tsconfig.lib.json",
    "clean": "rm -rf ./packages/*/lib ./packages/*/es",
    "lp": "yarn build && yarn test && lerna publish --registry https://registry.npmjs.org",
    "lpf": "yarn build && yarn test && lerna publish --registry https://registry.npmjs.org --force-publish",
    "test": "yarn ts:lib && jest",
    "coverage": "codecov"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.2",
    "@types/react": "^16.7.6",
    "@types/react-test-renderer": "^16.0.3",
    "codecov": "^3.1.0",
    "docsify-cli": "^4.3.0",
    "fs-extra": "^7.0.1",
    "jest": "24.5.0",
    "lerna": "^3.4.3",
    "npm-run-all": "^4.1.3",
    "ts-jest": "^24.0.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      ".cache"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.base.json"
      }
    },
    "preset": "ts-jest",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "packages/*/src/**/*.ts",
      "packages/*/src/**/*.tsx"
    ],
    "coverageReporters": [
      "html",
      "cobertura",
      "text"
    ]
  }
}
