{
  "name": "debe-monorepo",
  "private": true,
  "license": "MIT",
  "keywords": [
    "sqlite",
    "database",
    "electron",
    "react-native",
    "react"
  ],
  "author": "Benjamin Kniffler <bkniffler@me.com>",
  "bugs": {
    "url": "https://github.com/bkniffler/sqlight"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bkniffler/sqlight.git"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "up": "yarn upgrade-interactive --latest",
    "docs": "docsify serve docs",
    "typedoc": "run-s typedoc:*",
    "typedoc:clean": "rm -rf typedoc",
    "typedoc:lerna": "typedoc --options ./typedoc.js ./packages",
    "typedoc2:lerna": "lerna exec -- typedoc --mode file --excludePrivate --excludeProtected --exclude **/*.test.ts --tsconfig tsconfig.es.json --out \\$LERNA_ROOT_PATH/typedoc/\\$LERNA_PACKAGE_NAME src",
    "typedoc2:move": "cd typedoc && mv debe/* . && rm -rf debe && mv @debe/* . && rm -rf @debe",
    "netlify": "yarn build && cd example/react && yarn && yarn build",
    "bootstrap": "lerna bootstrap",
    "build": "yarn bootstrap && run-p ts:*",
    "dev": "run-p \"ts:* -- --watch\"",
    "ts:es": "tsc --build ./packages/core/tsconfig.es.json",
    "ts:lib": "tsc --build ./packages/core/tsconfig.lib.json",
    "clean": "rm -rf ./packages/*/lib ./packages/*/es",
    "li": "lerna init",
    "lp": "yarn build && yarn test && lerna publish --registry https://registry.npmjs.org",
    "lpf": "yarn build && yarn test && lerna publish --registry https://registry.npmjs.org --force-publish",
    "test": "yarn ts:lib && jest --verbose=false",
    "test2": "yarn ts:lib && PG_CONNECTIONSTRING=postgresql://postgres@localhost:5432/test2 jest --verbose=false",
    "coverage": "codecov"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.5",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.6",
    "@types/react": "^16.7.6",
    "@types/react-test-renderer": "^16.0.3",
    "codecov": "^3.1.0",
    "docsify-cli": "^4.3.0",
    "fs-extra": "^7.0.1",
    "jest": "24.5.0",
    "lerna": "^3.13.1",
    "npm-run-all": "^4.1.3",
    "ts-jest": "^24.0.0",
    "typedoc": "^0.14.2",
    "typedoc-plugin-ensure-internal": "https://github.com/deap82/typedoc-plugin-ensure-internal",
    "typescript": "^3.3.4000"
  },
  "jest": {
    "modulePathIgnorePatterns": [
      ".ou",
      "_old",
      ".cache"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "./tsconfig.base.json"
      }
    },
    "preset": "ts-jest",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "packages/*/src/**/*.ts",
      "packages/*/src/**/*.tsx"
    ],
    "coverageReporters": [
      "html",
      "cobertura",
      "text"
    ]
  }
}
