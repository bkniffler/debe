{
  "name": "debe-workspace",
  "version": "1.4.1",
  "private": true,
  "license": "MIT",
  "keywords": [
    "sync",
    "replicate",
    "replication",
    "dexie",
    "sql",
    "socket",
    "sqlite",
    "database",
    "electron",
    "react-native",
    "react"
  ],
  "workspaces": [
    "./src/*",
    "./example/*"
  ],
  "author": "Benjamin Kniffler <bkniffler@me.com>",
  "bugs": {
    "url": "https://github.com/bkniffler/debe"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bkniffler/debe.git"
  },
  "scripts": {
    "up": "yarn upgrade-interactive --latest",
    "clean": "rimraf lib && rimraf node_modules/.cache",
    "dev": "run-p \"ts:* -- --watch\"",
    "build": "run-s build:*",
    "build:ts": "tsc --project tsconfig.prod.json",
    "build:rollup": "rollup -c",
    "pub": "yarn build && yarn pub:npm",
    "pub2": "yarn build && yarn pub:npmb",
    "pub:npm": "foreach --no-C -g \"lib/*\" -x \"npm publish #{path} --registry=https://registry.npmjs.org/\"",
    "pub:npmb": "foreach --no-C -g \"lib/*\" -x \"npm publish #{path} --tag beta --registry=https://registry.npmjs.org/\"",
    "test": "jest --verbose",
    "test2": "PG_CONNECTIONSTRING=postgresql://postgres@localhost:5432/test yarn test",
    "coverage": "codecov",
    "benchmark": "ts-node --project ./benchmark/tsconfig.json benchmark"
  },
  "devDependencies": {
    "@types/benchmark": "^1.0.31",
    "@types/fs-extra": "^8.0.0",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/react": "^16.8.17",
    "@types/react-test-renderer": "^16.0.3",
    "benchmark": "^2.1.4",
    "codecov": "^3.7.1",
    "docsify-cli": "^4.3.0",
    "foreach-cli": "^1.8.1",
    "fs-extra": "^8.0.1",
    "inline-css": "^2.4.1",
    "jest": "24.8.0",
    "node-chartist": "^1.0.5",
    "npm-run-all": "^4.1.3",
    "rollup": "^1.12.2",
    "rollup-plugin-alias": "^1.5.1",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-commonjs": "^10.0.1",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "svg2img": "^0.6.0",
    "ts-jest": "^24.0.2",
    "typescript": "^3.4.5"
  },
  "resolutions": {
    "typescript": "3.5.3",
    "react": "^16.9.0-alpha.0",
    "react-dom": "^16.9.0-alpha.0",
    "@types/react": "16.8.23"
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "ignoreCodes": [
            2571,
            6031,
            18003,
            151001
          ]
        },
        "tsConfig": "./tsconfig.json"
      }
    },
    "modulePathIgnorePatterns": [
      "example",
      "lib"
    ],
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageReporters": [
      "html",
      "cobertura",
      "text"
    ]
  }
}
